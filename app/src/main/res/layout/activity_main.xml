                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />

            <android.widget.Button
                android:id="@+id/virgulle"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_button"
                android:layout_weight="1"
                android:onClick="virgullebtn"
                android:background="@drawable/circle"
                android:shadowColor="@color/black"
                android:text="@string/virgulle"
                android:textSize="@dimen/text_btn_size"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />

            <android.widget.Button
                android:id="@+id/btnreset"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_button"
                android:layout_weight="1"
                android:onClick="clearbtn"
                android:background="@drawable/circle"
                android:shadowColor="@color/black"
                android:text="@string/ac"
                android:textSize="@dimen/text_btn_size"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />
            <android.widget.Button
                android:id="@+id/oddORpositive"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_button"
                android:layout_weight="1"
                android:onClick="signbtn"
                android:background="@drawable/circle"
                android:shadowColor="@color/black"
                android:text="@string/sign"
                android:textSize="@dimen/text_btn_size"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="441dp"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:autofillHints="false"
        android:background="#38801A"
        android:inputType="none"
        android:minHeight="48dp"
        android:text="@string/saisir_votre_op_ration"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <ImageButton

        android:id="@+id/btnDel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/margin_between_button"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:onClick="delbtn"
        android:background="@drawable/costum_button"
        android:contentDescription="@string/delete"
        android:shadowColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/delete"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>