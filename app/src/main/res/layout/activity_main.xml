                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />

            <android.widget.Button
                android:id="@+id/_parenthese"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_button"
                android:layout_weight="1"
                android:onClick="parenthesesbtn"
                android:background="@drawable/circle"
                android:shadowColor="@color/black"
                android:text="@string/parantheses"
                android:textSize="@dimen/text_btn_size"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />

            <android.widget.Button
                android:id="@+id/puissance"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_button"
                android:layout_weight="1"
                android:onClick="puissancebtn"
                android:background="@drawable/circle"
                android:shadowColor="@color/black"
                android:text="@string/puiss"
                android:textSize="@dimen/text_btn_size"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.widget.Button
                android:id="@+id/egal"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_button"
                android:layout_weight="1"
                android:onClick="egalbtn"
                android:background="@drawable/circle"
                android:shadowColor="@color/black"
                android:text="@string/egal"
